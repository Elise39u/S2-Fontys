@model KillerAppS2.Models.UserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_StartLayout.cshtml";
}

<h1> You choose @ViewData["SessionData"]</h1>
<p> First you need to login below to continu</p>
<p> New to the page register first</p>

<form asp-action="CheckLoginData">
    <div class="form-group">
        <label asp-for="Email">Email:</label><br />
        <input asp-for="Email" name="Email" type="text" placeholder="example@hotmail.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">password:</label><br />
        <input asp-for="Password"  name="Password" type="password" placeholder="Example231" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button name="Login">Log me in</button>
    <button asp-controller="User" asp-action="Register" name="Register">Register page</button>
</form>